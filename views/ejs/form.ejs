<h3 class="text-primary">Ingrese datos</h3>
<br>
<form action="/productos" method="post">
    <div class="form-group">
        <label for="name">Nombre</label>
        <input type="text" name="name" id="name" class="form-control">
    </div>
    <div class="form-group">
        <label for="price">Precio</label>
        <input type="number" name="price" id="price" class="form-control">
    </div>
    <div class="form-group">
        <label for="url">Foto URL</label>
        <input type="url" name="url" id="url" class="form-control">
    </div>
    <input type="submit" value="Enviar" class="btn btn-success mt-4">
    <a class="btn btn-success text-light text-decoration-none mt-4 ms-4" href="/productos" role="button">Ver Productos</a>
</form>